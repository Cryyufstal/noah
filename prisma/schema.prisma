datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String   @id @default(uuid())
  telegramId  Int      @unique
  username    String?
  firstName   String?
  lastName    String?
  points      Int
  referrer    String?  // المحيل
  referrals   User[]   @relation("ReferralRelation", fields: [referrer], references: [id])
}
